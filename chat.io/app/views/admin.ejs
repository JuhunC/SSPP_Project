<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>2 8 4 8</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel='stylesheet prefetch' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css'>
  <link href="https://fonts.googleapis.com/css?family=Jua" rel="stylesheet">
</head>

<body>
  <div class="container clearfix">
    <div class="controls" style="border: none; width: 100%;">
      <p href="/main" id="admin_title">Admin</p>
      <a href="/logout" class="logout-btn" style="width: auto; padding: 13px; font-size: 12px;">Logout</a>
    </div>
    <div class="main_bg_adm">
      <div class="room" style="width: 100%;">
        <div class="room-header clearfix">
          <div class="room-about">
            <div class="room-title" id="room-title">Rooms</div>
          </div>
          <i class="fa fa-th-list"></i>
        </div> <!-- end room-header -->

        <!-- <div class="room-create clearfix" style="border-bottom: 2px solid white;">
          <input type="text" name="title" autofocus placeholder="Type a new room">
          <button>Create</button>
        </div> end room-create -->

        <!-- <form action="/approve" method="POST">
                <input type="text" name="test">
                <input type="submit" value="테스팅">
              </form> -->

        <div class="room-list">
          <ul>
            <% if(rooms.length > 0) { %>
            <% rooms.forEach(function(room) { 
                if(room.approved === "false"){%>
            <li class="room-item" id="admin-list">
              <form action="/approve" class="pro_approve" method="POST">
                <input type="text" id="pro_app" name="test" value="<%= (room.title.length > 25? room.title.substr(0, 25) + '...': room.title) %>" readonly>
                <input type="submit" id="pro_check" value="승인">
              </form>
            </li>

            <% } else { %>
            <% }}); %>
            <%}else {%>
            <p class="message" style="text-align: center; padding: 0; margin: 0;">승인 대기중인 방이 없습니다.</p>
            <%}%>
          </ul>
        </div> <!-- end room-list -->
      </div> <!-- end room -->
    </div>
  </div> <!-- end container -->
  <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/main.js"></script>
  <script>$(function () { app.rooms() });</script>

</body>

</html>